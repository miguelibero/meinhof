{
    "name": "miguelibero/meinhof",
    "type": "library",    
    "description": "A static blog generating tool",
    "keywords": ["meinhof", "jekyll", "blog", "generator", "command-line"],
    "homepage": "http://github.com/miguelibero/meinhof",
    "license": "MIT",
    "authors": [
        {
            "name": "Miguel Ibero",
            "email": "miguel@ibero.me"
        }
    ],    
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "php":                          ">=5.3.2",
        "symfony/dependency-injection": "2.1.*",
        "symfony/event-dispatcher":     "2.1.*",
        "symfony/config":               "2.1.*",
        "symfony/console":              "2.1.*",
        "symfony/finder":               "2.1.*",
        "symfony/process":              "2.1.*",
        "symfony/templating":           "2.1.*"
    },
    "require-dev": {
        "symfony/yaml":                 "2.1.*",        
        "twig/twig":                    "1.8.*",
        "kriswallsmith/assetic":        "1.1.*",
        "dflydev/markdown":             "1.0.*",
        "symfony/translation":          "2.1.*"
    },
    "bin": [
        "bin/meinhof"
    ]
}
