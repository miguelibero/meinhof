{
    "name": "miguelibero/meinhof",
    "type": "library",    
    "description": "A static blog generating tool",
    "keywords": ["meinhof", "jekyll", "blog", "generator", "command-line"],
    "homepage": "http://github.com/miguelibero/meinhof",
    "license": "MIT",
    "authors": [
        {
            "name": "Miguel Ibero",
            "email": "miguel@ibero.me"
        }
    ],    
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "minimum-stability": "dev",
    "require": {
        "php":                          ">=5.3.2",
	"ext-mbstring":			"*",
        "symfony/dependency-injection": "2.5.*",
        "symfony/event-dispatcher":     "2.5.*",
        "symfony/config":               "2.5.*",
        "symfony/console":              "2.5.*",
        "symfony/finder":               "2.5.*",
        "symfony/process":              "2.5.*",
        "symfony/templating":           "2.5.*"
    },
    "require-dev": {
        "symfony/yaml":                 "2.5.*",        
        "twig/twig":                    "1.15.*",
        "kriswallsmith/assetic":        "1.2.*",
        "michelf/php-markdown":         "1.4.*",
        "symfony/translation":          "2.5.*",
	"phpunit/phpunit": 		"3.7.*"
    },
    "bin": [
        "bin/meinhof"
    ]
}
